{
  "name": "clippn",
  "author": "Clippn <ryanehrler@gmail.com>",
  "version": "0.0.1",
  "license": "MIT",
  "main": "src/electron/main.js",
  "build": {
    "appId": "clippn",
    "asarUnpack": [
      "node_modules/ffmpeg-static/bin/${platform}/${arch}/",
      "node_modules/ffmpeg-static/index.js",
      "node_modules/ffmpeg-static/package.json",
      "node_modules/ffprobe-static/bin/${platform}/${arch}/",
      "node_modules/ffprobe-static/index.js",
      "node_modules/ffprobe-static/package.json"
    ],
    "files": [
      "**/*",
      "!src/",
      "!docs/",
      "!dist/",
      "!assets/",
      "!clipImages/",
      "src/electron/main.js",
      "src/electron/config.js",
      "src/electron/process-video.js",
      "build"
    ],
    "win": {
      "target": "portable",
      "icon": "assets/icon.png",
      "files": [
        "!node_modules/ffmpeg-static/bin/darwin${/*}",
        "!node_modules/ffmpeg-static/bin/linux${/*}",
        "!node_modules/ffprobe-static/bin/darwin${/*}",
        "!node_modules/ffprobe-static/bin/linux${/*}"
      ]
    }
  },
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build --base-href ./",
    "build-prod": "ng build --prod --base-href ./",
    "build-w": "ng build --base-href ./ --watch",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "electronq": "./node_modules/.bin/electron .",
    "electron": "ng build --base-href ./ && .\\node_modules\\.bin\\electron .",
    "electron-build": "ng build --prod --base-href ./ && .\\node_modules\\.bin\\electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "6.0.1",
    "@angular/cdk": "^6.1.0",
    "@angular/common": "6.0.1",
    "@angular/compiler": "6.0.1",
    "@angular/core": "6.0.1",
    "@angular/forms": "6.0.1",
    "@angular/http": "6.0.1",
    "@angular/material": "^6.1.0",
    "@angular/platform-browser": "6.0.1",
    "@angular/platform-browser-dynamic": "6.0.1",
    "@angular/router": "6.0.1",
    "@covalent/core": "^2.0.0-beta.1",
    "@types/angular-material": "^1.1.58",
    "@types/lodash": "^4.14.109",
    "angular2-moment": "^1.9.0",
    "angularfire2": "^5.0.0-rc.9",
    "core-js": "^2.5.4",
    "ffmpeg-extract-frames": "^2.0.0",
    "ffmpeg-static": "^2.2.1",
    "ffprobe-static": "^2.0.0",
    "file-api": "^0.10.4",
    "firebase": "^5.0.2",
    "fluent-ffmpeg": "^2.1.2",
    "font-awesome": "^4.7.0",
    "gridlex": "^2.6.1",
    "hammerjs": "^2.0.8",
    "lodash": "^4.17.5",
    "normalize.css": "^7.0.0",
    "rxjs": "^6.0.0",
    "zone.js": "^0.8.26",
    "electron-squirrel-startup": "^1.0.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.6.3",
    "@angular/cli": "6.0.1",
    "@angular/compiler-cli": "6.0.1",
    "@angular/language-service": "6.0.1",
    "@types/electron": "^1.6.10",
    "@types/jasmine": "~2.5.53",
    "@types/jasminewd2": "~2.0.2",
    "@types/node": "~6.0.60",
    "codelyzer": "^4.0.1",
    "electron": "1.8.2",
    "jasmine-core": "~2.6.2",
    "jasmine-spec-reporter": "~4.1.0",
    "karma": "~1.7.0",
    "karma-chrome-launcher": "~2.1.1",
    "karma-cli": "~1.0.1",
    "karma-coverage-istanbul-reporter": "^1.2.1",
    "karma-jasmine": "~1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "protractor": "~5.1.2",
    "ts-node": "~3.2.0",
    "tslint": "~5.7.0",
    "tslint-config-prettier": "^1.6.0",
    "typescript": "^2.7.2",
    "electron-builder": "^20.10.0"
  }
}
